<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_fav_place"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/md_theme_light_secondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_place_name_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/md_theme_light_onSecondary"
            android:text="@string/place_name_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_view_like_counter_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/like_counter_placeholder"
            android:textColor="@color/md_theme_light_onSecondary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/image_button_add_place_to_fav_fav"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@id/image_button_add_place_to_fav_fav"
            app:layout_constraintTop_toBottomOf="@id/image_button_add_place_to_fav_fav" />

        <ImageButton
            android:id="@+id/image_button_add_place_to_fav_fav"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/fui_transparent"
            android:contentDescription="@string/add_place_to_favourites"
            android:src="@drawable/ic_favourite"
            app:layout_constraintBottom_toBottomOf="@id/text_view_place_name_fav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_place_name_fav" />

        <TextView
            android:id="@+id/text_view_place_author_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/md_theme_light_onSecondary"
            android:text="@string/created_by_placeholder"
            app:layout_constraintStart_toStartOf="@id/text_view_place_name_fav"
            app:layout_constraintTop_toBottomOf="@id/text_view_place_name_fav"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>