<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_view_place_name_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="@string/place_name_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_view_like_counter_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        android:text="@string/like_counter_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_view_place_name_fav"/>

    <ImageButton
        android:id="@+id/image_button_add_place_to_fav_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fui_transparent"
        android:src="@drawable/ic_favourite"
        app:layout_constraintEnd_toStartOf="@id/text_view_like_counter_fav"
        app:layout_constraintTop_toTopOf="@id/text_view_like_counter_fav"
        app:layout_constraintBottom_toBottomOf="@id/text_view_like_counter_fav"
        android:contentDescription="@string/add_place_to_favourites" />

</androidx.constraintlayout.widget.ConstraintLayout>